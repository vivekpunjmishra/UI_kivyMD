<Label>
    font_size:20

<MyLayout>
    email:email
    password:password
    GridLayout:
        cols:1
        size: root.width, root.height
        background_normal:''
        GridLayout:
            cols:1
            BoxLayout:
                orientation:"horizontal"

                padding:50
                spacing:20


                Button:
                    text:"Notify"
                    background_normal:''
                    background_color:(0,1,0,0.5)
                Button:
                    text:"Rewords"
                    background_normal:''
                    background_color:(0,0.5,1,0.5)
                Button:
                    text:"Mail"
                    background_normal:''
                    background_color:(1,0,0,0.5)
                Button:
                    text:"Chat"
                    background_normal:''
                    background_color:(0.5,0,1,0.5)
                Button:
                    text:"Pay"
                    background_normal:''
                    background_color:(1,0,0,0.5)                
        GridLayout:
            cols:1
            GridLayout:
                cols:2
                padding:50
                spacing:20

                Label:
                    text:"Email"  
                    color:(0,0,0,1)
                TextInput:
                    id:email
                    multiline:False
                    size_hint: (None,None)
                    width:350
                    height:40    

                Label:
                    text:"Password"
                    color:(0,0,0,1)
                TextInput:
                    id:password
                    multiline:False
                    size_hint: (None,None)
                    width:350
                    height:40    
        GridLayout:
            cols:1
            BoxLayout:
                orientation:"horizontal"
                padding:70
                spacing:70
            
                Button:
                    text:"Login"
                    background_normal:''
                    background_color:(0.5,0.5,0.5,0.5)
                    color:(0,0,0,1)
                    pos_hint: {"right":1}
                    size_hint: (None,None)
                    width:100
                    height:50
                    on_press:root.onress

        GridLayout:
            cols:1
            BoxLayout:
                orientation:"horizontal"
                padding:30
                spacing:20
                Image:
                    source:'images/home.png'
                Image:
                    source:'images/sunrise.png'
                Image:
                    source:'images/shopping.png'
                Image:
                    source:'images/dollar.jfif'
                Image:
                    source:'images/telephone.png'
                Image:
                    source:'images/Earth.ico'
                Image:
                    source:'images/help.jfif'                        

